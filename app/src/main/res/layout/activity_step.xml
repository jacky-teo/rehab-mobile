<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StepActivity"
    >
    <EditText
        android:id="@+id/username"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"

        android:hint="Username"
        android:inputType="text"/>
    <EditText
        android:id="@+id/activitydate"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:hint="Date"
        android:inputType="text"/>
    <EditText
        android:id="@+id/points"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"

        android:inputType="number"
        android:hint="Points" />
    <EditText
        android:id="@+id/stepactivity"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"

        android:hint="Step It Up Points"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/ballbalance"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"

        android:hint="Ball Balance Points"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getActivity"
        android:text="Get Activity"
        android:layout_gravity="center"
        android:onClick="getAllBtnClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getUserActivity"
        android:text="Get User Activity"
        android:layout_gravity="center"
        android:onClick="getUserActivityBtnClick"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateActivity"
        android:text="Update Activity"
        android:layout_gravity="center"
        android:onClick="updateActivityBtnClick"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createActivty"
        android:text="Create Activity"
        android:layout_gravity="center"
        android:onClick="createActivityBtnClick"
        />

</LinearLayout>